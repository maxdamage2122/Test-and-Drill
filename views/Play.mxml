<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		actionBarVisible="false" overlayControls="true" title="Play" clipAndEnableScrolling="true" xmlns:components="components.*">
	<fx:Script>
		<![CDATA[
			import spark.events.TextOperationEvent;

			protected function rightValue_changeHandler(event:TextOperationEvent):void
			{
				if (int(rightValue.text) != rightSlider.value)
					rightSlider.value=int(rightValue.text);
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>	 
	
	<s:VSlider id="leftSlider" left="5" bottom="110" width="58" height="200" liveDragging="true"
			   maximum="10000" minimum="10" skinClass="components.VSliderSkin"/>
	
	<s:VSlider id="rightSlider" right="5" bottom="110" width="58" height="200" 
			   liveDragging="true" maximum="180"
			   minimum="-180" skinClass="components.VSliderSkin"/>
	
	<s:Button right="10" bottom="10" width="121" label="Submit" fontSize="22" click="navigator.pushView(CheckGuess)"/>
	<s:TextInput id="rightValue" right="68" bottom="251" width="58" height="58" borderVisible="true"
				 enabled="false" fontSize="18"
				 fontWeight="normal" text="{Math.abs(rightSlider.value)}" textAlign="center"/>
	<s:Button id="rightPlus" right="68" bottom="181" width="58" height="58" label="+"
			  buttonDown="rightSlider.value=rightSlider.value+1" autoRepeat="true" fontSize="24" fontWeight="bold"/>
	<s:Button id="rightMinus" right="68" bottom="111" width="58" height="58" label="-"
			  buttonDown="rightSlider.value=rightSlider.value-1" autoRepeat="true"/>
	<s:Button left="10" bottom="10" width="121" label="Back" click="navigator.popView()"
			  fontSize="22"/>
	<s:Button id="leftPlus" left="68" bottom="181" width="58" height="58" label="+"
			  buttonDown="leftSlider.value=leftSlider.value+1" autoRepeat="true"/>
	<s:Button id="leftMinus" left="68" bottom="111" width="58" height="58" label="-"
			  buttonDown="leftSlider.value=leftSlider.value-1" autoRepeat="true"/>
	<s:TextInput id="leftValue" left="68" bottom="251" width="58" height="58" enabled="false"
				 fontSize="13" fontWeight="normal" text="{leftSlider.value}" textAlign="center"/>
	
	<s:Panel top="0" width="400" height="400" backgroundColor="#000000" horizontalCenter="0"
			 title="Panel" skinClass="components.PanelSkin">
		<components:Away3dScene id="away3dScene" width="100%" height="100%"/>
	</s:Panel>
	
</s:View>
